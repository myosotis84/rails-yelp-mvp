<div class="content">
  <h1><%= @restaurant.name %> <span>(<%= @restaurant.category %>)</span></h1>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <h3>Reviews</h3>
  <% if @restaurant.reviews.empty? %>
    No reviews yet
  <% else %>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li class="li-no-style">Rating: <%= review.rating %> / 5</br><%= review.content %></li>
      <% end %>
    </ul>
  <% end %>
  <h4>Add your review</h4>
  <div class="form">
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit your review", class: "btn btn-primary" %>
    <% end %>
  </div>

  <p><%= link_to "Back to all restaurants", restaurants_path %></p>
</div>
